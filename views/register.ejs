<% layout('layout') -%>
<main class="account">
  <h1>Register</h1>

  <section class="form">
    <form method='post' id="register-form" action='/portfolio'>
      <fieldset class='form-field'>
        <label for="name-input">Name</label>
        <input type="text" name="name" id="name-input">

        <label for="email-reg-input">Email</label>
        <input type='email' name='email' id='email-reg-input' />

        <label for="password-reg-input">Password</label>
        <input type="password" name="password" id="password-reg-input" />

        <input type="submit" name="submit" value="Register" formmethod="post" formaction="/user/register">
        <a class="reroutes" href="signin">Already have an account?</a>
      </fieldset>
    </form>
  </section>
</main>

<script type="text/javascript" src="api/dataManipulation/userRegistration.js"></script>