<% layout('layout') -%>
<main class="account">
  <h1>Sign In</h1>

  <section class="form">
    <form method='post' id="signin-form" action='/portfolio'>
      <fieldset class='form-field'>
        <label for="email-signin-input">Email</label>
        <input type='email' name='email' id='email-signin-input' />

        <label for="password-signin-input">Password</label>
        <input type="password" name="password" id="password-signin-input" />

        <input type="submit" name="submit" value="Login" formmethod="post" formaction="/user/signin">
        <a class="reroutes" href="/">Don't have an account?</a>
      </fieldset>
    </form>
  </section>
</main>

<script type="text/javascript" src="api/dataManipulation/userSignin.js"></script>